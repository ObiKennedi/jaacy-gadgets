datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Blog {
  id        String   @id @default(uuid())
  image     String
  title     String
  content   String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      Role     @default(CUSTOMER)
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  CUSTOMER
}

model Product {
  id        String   @id @default(uuid())
  name      String
  specs     Json
  image     String
  price     Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
